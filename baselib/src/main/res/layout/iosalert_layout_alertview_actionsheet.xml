<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/loAlertHeader"
        android:background="@drawable/iosalert_bg_actionsheet_header"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlertTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iosaleart_height_actionsheet_title"
            android:gravity="center"
            android:textColor="@color/iosalert_actionsheet_title"
            android:textSize="@dimen/iosaleart_actionsheet_title" />

        <TextView
            android:id="@+id/tvAlertMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/iosaleart_marginBottom_actionsheet_msg"
            android:gravity="center"
            android:textColor="@color/iosalert_actionsheet_msg"
            android:textSize="@dimen/iosaleart_actionsheet_msg" />
        <ListView
            android:id="@+id/alertButtonListView"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/iosalert_bg_alertbutton_none"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:scrollbars="none"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAlertCancel"
        android:visibility="gone"
        android:layout_marginTop="@dimen/iosaleart_margin_actionsheet_left_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_alert_button"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/iosalert_bg_actionsheet_cancel"
        android:textColor="@color/iosalert_button_cancel"
        android:textStyle="bold"
        android:textSize="@dimen/iosaleart_textSize_alert_button" />
</LinearLayout>