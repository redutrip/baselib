<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_normal_top_ll"
        android:layout_width="@dimen/x750"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y600"
            android:layout_marginLeft="@dimen/x74"
            android:layout_marginRight="@dimen/x74"
            android:background="@drawable/pop_up_bg_small"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dialog_normal_top_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y188"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y10">

                <ImageView
                    android:id="@+id/dialog_normal_title_iv"
                    android:layout_width="@dimen/x412"
                    android:layout_height="@dimen/y168"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/white_elephants" />

                <TextView
                    android:id="@+id/dialog_normal_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x20"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/aliwx_wxtribe_title_color"
                    android:textSize="@dimen/x46"
                    android:visibility="visible" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/dialog_normal_scroll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y240"
                android:layout_below="@+id/dialog_normal_top_rl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialog_normal_top_rl"
                    android:gravity="center"
                    android:minHeight="@dimen/y240"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/y20"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:paddingTop="@dimen/y20">

                    <TextView
                        android:id="@+id/dialog_normal_messagel_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你想好了吗~"
                        android:textColor="@color/aliwx_wxtribe_title_color"
                        android:textSize="@dimen/x60" />

                    <TextView
                        android:id="@+id/dialog_normal_messagem_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:text="提交之后不能更改了啊~"
                        android:textColor="@color/aliwx_tab_normal_color"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/dialog_normal_messages_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textColor="@color/aliwx_tab_normal_color"
                        android:textSize="@dimen/x24" />
                </LinearLayout>

            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/dialog_normal_left_btn"
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/y104"
                    android:layout_marginBottom="@dimen/x30"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x36"
                    android:background="@drawable/special_shape_btm"
                    android:gravity="center"
                    android:paddingBottom="@dimen/x16"
                    android:text="ok  "
                    android:textColor="#333333"
                    android:textSize="@dimen/y32" />

                <Button

                    android:id="@+id/dialog_normal_right_btn"
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/y104"
                    android:layout_marginBottom="@dimen/x30"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x36"
                    android:background="@drawable/special_shape_btm"
                    android:paddingBottom="@dimen/x16"
                    android:text="取消"
                    android:textColor="#333333"
                    android:textSize="@dimen/y32" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_normal_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_bottom"
            android:layout_marginTop="@dimen/x100"/>

    </LinearLayout>


</FrameLayout>
